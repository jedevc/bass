#!/usr/bin/env bass

(use (*dir*/bass.bass))

(defn main []
  (for [{:src src
         (:version "dev") version
         (:os "linux") os
         (:arch "amd64") arch} *stdin*]
    (log "building + smoke-testing" :version version :os os :arch arch)
    (let [dist (bass:build src version os arch)]
      (bass:smoke-test dist)
      (write dist *dir*/dist.tar))))
