(def test-cache-path
  (cache-dir (str "test-cache-paths-" (now 0))))

(defn counter [tag]
  (from (linux/alpine)
    (-> ($ sh -c "echo $0 >> /var/cache/file; cat /var/cache/file | wc -l" $tag)
        (with-mount test-cache-path /var/cache/))))

(defn count [tag]
  (next (read (counter tag) :json)))

[(count "once")
 (count "twice")
 (count "thrice")]
